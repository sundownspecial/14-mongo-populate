{
  "name": "lab-jesus",
  "version": "1.0.0",
  "description": "Express",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "test": "jest -i",
    "test:watch": "jest -i --watchAll",
    "test:debug": "DEBUG=http* jest -i",
    "start:watch": "nodemon index.js",
    "start:debug": "DEBUG=http* nodemon index.js",
    "dbon": "mkdir -p ./db && mongod --dbpath ./db"
  },
  "jest": {
    "setupFiles": [
      "./__test__/lib/jest-setup.js"
    ],
    "verbose": true,
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "author": "Jesus",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^5.0.0",
    "eslint": "^4.16.0",
    "express": "^4.16.2",
    "jest": "^22.1.4",
    "mongoose": "^5.0.2",
    "nodemon": "^1.14.11",
    "superagent": "^3.8.2",
    "uuid": "^3.2.1"
  }
}
